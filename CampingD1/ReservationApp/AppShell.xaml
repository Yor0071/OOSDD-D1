<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReservationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReservationApp"
    Shell.FlyoutBehavior="Disabled"
    Title="ReservationApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MapScreenCustomer}"
        Route="MapScreenCustomer" />

    <!-- Voeg hier de route voor de ReservationPage toe -->
    <ShellContent
        Title="Reserveren"
        ContentTemplate="{DataTemplate local:ReservationPage}" />
</Shell>
