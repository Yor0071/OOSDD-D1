<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReservationApp.MapScreenCustomer"
             Title="Plattegrond">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="BackgroundColor" Value="#f0f0f0"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#4CAF50"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="10">
        <!-- Titel voor de pagina -->
        <Label 
            Text="Plattegrond"
            FontSize="24"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <!-- Gebruik een HorizontalStackLayout om de datumprikkers naast elkaar te plaatsen -->
        <HorizontalStackLayout Spacing="500" HorizontalOptions="Center">
            <!-- Aankomstdatum -->
            <StackLayout>
                <Label 
            Text="Aankomstdatum"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
                <DatePicker 
            x:Name="arrivalDatePicker"
            Date="{Binding ArrivalDate}"
            VerticalOptions="Center"
            WidthRequest="150" />
            </StackLayout>

            <!-- Vertrekdatum -->
            <StackLayout>
                <Label 
            Text="Vertrekdatum"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
                <DatePicker 
            x:Name="departureDatePicker"
            Date="{Binding DepartureDate}"
            VerticalOptions="Center"
            WidthRequest="150" />
            </StackLayout>
        </HorizontalStackLayout>

        <!-- Zoekbeschikbaarheid knop -->
        <Button 
            Text="Zoek Beschikbaarheid"
            HorizontalOptions="Center"
            VerticalOptions="Center" 
            Clicked="OnSearchAvailabilityClicked" />

        <!-- Afbeelding onder de datumprikkers -->
        <AbsoluteLayout x:Name="Canvas">
            <Image 
                Source="image.png"  
                WidthRequest="1000"
                HeightRequest="700"
                Aspect="AspectFill"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,20,0,0" />
        </AbsoluteLayout>
    </VerticalStackLayout>
</ContentPage>
